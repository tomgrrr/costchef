<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card">
      <div class="card-body">
        <%= form_with(model: tray_size) do |f| %>
          <% if tray_size.errors.any? %>
            <div class="alert alert-danger">
              <% tray_size.errors.full_messages.each do |message| %>
                <p class="mb-0"><%= message %></p>
              <% end %>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :name, 'Nom', class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control', required: true, autofocus: true %>
          </div>

          <div class="mb-3">
            <%= f.label :price, 'Prix', class: 'form-label' %>
            <div class="input-group">
              <%= f.number_field :price, class: 'form-control', min: 0, step: 0.01 %>
              <span class="input-group-text">â‚¬</span>
            </div>
          </div>

          <div class="d-flex gap-2">
            <%= f.submit class: 'btn btn-primary' %>
            <%= link_to 'Annuler', tray_sizes_path, class: 'btn btn-outline-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
