<div id="cooking_loss_form_<%= recipe.id %>">
  <%= form_with model: recipe, method: :patch, data: { turbo_stream: true }, class: "d-flex align-items-center gap-2" do |f| %>
    <span class="info-label text-nowrap">Perte cuisson</span>
    <div class="input-group input-group-sm" style="max-width: 100px;">
      <%= f.number_field :cooking_loss_percentage, min: 0, max: 100, step: 0.1,
          value: recipe.cooking_loss_percentage || 0,
          class: "form-control form-control-sm",
          style: "font-size: 11px;" %>
      <span class="input-group-text" style="font-size: 11px;">%</span>
    </div>
    <button type="submit" class="action-btn" title="Appliquer">
      <i class="bi bi-check"></i>
    </button>
  <% end %>
</div>
