<%= form_with(model: recipe, local: true) do |form| %>
  <% if recipe.errors.any? %>
    <div class="alert alert-danger">
      <h6 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Erreur(s) :</h6>
      <ul class="mb-0">
        <% recipe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Nom de la recette -->
  <div class="mb-3">
    <%= form.label :name, class: "form-label fw-bold" do %>
      Nom de la recette <span class="text-danger">*</span>
    <% end %>
    <%= form.text_field :name,
        class: "form-control #{'is-invalid' if recipe.errors[:name].any?}",
        placeholder: "Ex: Verrine saumon-avocat",
        required: true %>
  </div>

  <!-- Description -->
  <div class="mb-3">
    <%= form.label :description, class: "form-label fw-bold" do %>
      Description <span class="text-muted">(optionnel)</span>
    <% end %>
    <%= form.text_area :description,
        class: "form-control",
        rows: 4,
        placeholder: "Brève description de la recette..." %>
  </div>

  <!-- Boutons d'action -->
  <div class="d-grid gap-2 d-md-flex justify-content-md-between mt-4">
    <%= link_to recipes_path, class: "btn btn-outline-secondary btn-lg" do %>
      <i class="bi bi-arrow-left"></i> Annuler
    <% end %>
    <%= form.submit recipe.persisted? ? "Mettre à jour la recette" : "Créer la recette",
        class: "btn btn-success btn-lg" %>
  </div>
<% end %>
