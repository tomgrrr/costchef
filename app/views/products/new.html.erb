<!-- Breadcrumb -->
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Accueil", root_path %></li>
    <li class="breadcrumb-item"><%= link_to "Référentiel Produits", products_path %></li>
    <li class="breadcrumb-item active">Nouveau Produit</li>
  </ol>
</nav>

<!-- En-tête -->
<div class="row mb-4">
  <div class="col-md-12">
    <h2><i class="bi bi-plus-circle"></i> Nouveau Produit</h2>
    <p class="text-muted">Ajoutez un nouveau produit à votre référentiel</p>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow">
      <div class="card-body p-4">
        <%= render "form", product: @product %>
      </div>
    </div>

    <!-- Indication champs obligatoires -->
    <p class="text-muted text-center mt-3">
      <small><span class="text-danger">*</span> Champs obligatoires</small>
    </p>
  </div>
</div>
