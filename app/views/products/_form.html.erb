<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div class="alert alert-danger">
      <h6 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Erreur(s) :</h6>
      <ul class="mb-0">
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Nom du produit -->
  <div class="mb-4">
    <%= form.label :name, class: "form-label fw-bold" do %>
      Nom du produit <span class="text-danger">*</span>
    <% end %>
    <%= form.text_field :name,
        class: "form-control form-control-lg #{'is-invalid' if product.errors[:name].any?}",
        placeholder: "Ex: Saumon fumé Écosse",
        required: true %>
    <div class="form-text">
      <i class="bi bi-info-circle"></i> Nom clair et précis pour faciliter la recherche
    </div>
  </div>

  <!-- Unité de base -->
  <div class="mb-4">
    <%= form.label :base_unit, class: "form-label fw-bold" do %>
      Unité de base <span class="text-danger">*</span>
    <% end %>
    <%= form.select :base_unit,
        options_for_select([
          ["Kilogramme (kg)", "kg"],
          ["Litre (l)", "l"],
          ["Pièce", "piece"]
        ], product.base_unit),
        {},
        class: "form-select form-select-lg #{'is-invalid' if product.errors[:base_unit].any?}",
        required: true,
        data: { controller: "product-unit", action: "change->product-unit#toggle" } %>
    <div class="form-text">
      <i class="bi bi-info-circle"></i> Unité de référence pour les calculs de coût
    </div>
  </div>

  <!-- Poids unitaire (affiché seulement si pièce) -->
  <div class="mb-4" id="unit-weight-field" style="<%= 'display: none;' unless product.base_unit == 'piece' %>">
    <%= form.label :unit_weight_kg, class: "form-label fw-bold" do %>
      Poids unitaire (kg) <span class="text-danger">*</span>
    <% end %>
    <%= form.number_field :unit_weight_kg,
        class: "form-control form-control-lg #{'is-invalid' if product.errors[:unit_weight_kg].any?}",
        placeholder: "0.000",
        step: "0.001",
        min: "0.001" %>
    <div class="form-text">
      <i class="bi bi-info-circle"></i> Poids d'une pièce en kg (ex: 0.200 pour un avocat de 200g)
    </div>
  </div>

  <hr class="my-4">

  <!-- Exemple de calcul -->
  <div class="alert alert-light border" role="alert">
    <h6 class="alert-heading">
      <i class="bi bi-lightbulb text-warning"></i> Exemple d'utilisation
    </h6>
    <p class="mb-0">
      Si vous achetez du <strong>Saumon fumé Écosse</strong> à <strong>45,00 &euro; / kg</strong>,
      une recette utilisant <strong>0,15 kg</strong> coûtera automatiquement
      <strong class="text-primary">6,75 &euro;</strong> en matière première.
    </p>
  </div>

  <!-- Boutons d'action -->
  <div class="d-grid gap-2 d-md-flex justify-content-md-between mt-4">
    <%= link_to products_path, class: "btn btn-outline-secondary btn-lg" do %>
      <i class="bi bi-arrow-left"></i> Annuler
    <% end %>
    <%= form.submit product.persisted? ? "Mettre à jour le produit" : "Enregistrer le produit",
        class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
