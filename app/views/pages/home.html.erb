<div class="text-center mb-4">
  <%= image_tag "logo.jpg", height: 100, class: "rounded mb-3" %>
  <h1>Tableau de bord</h1>
</div>

<div class="row g-4">
  <div class="col-md-3">
    <div class="card text-center h-100">
      <div class="card-body d-flex flex-column justify-content-center">
        <i class="bi bi-box-seam fs-1 text-primary mb-2"></i>
        <h5 class="card-title">Produits</h5>
        <p class="display-4 fw-bold"><%= @products_count %></p>
        <%= link_to "Accéder", products_path, class: "btn btn-primary mt-auto" %>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card text-center h-100">
      <div class="card-body d-flex flex-column justify-content-center">
        <i class="bi bi-journal-text fs-1 text-success mb-2"></i>
        <h5 class="card-title">Recettes</h5>
        <p class="display-4 fw-bold"><%= @recipes_count %></p>
        <%= link_to "Accéder", recipes_path, class: "btn btn-success mt-auto" %>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card text-center h-100">
      <div class="card-body d-flex flex-column justify-content-center">
        <i class="bi bi-truck fs-1 text-warning mb-2"></i>
        <h5 class="card-title">Fournisseurs</h5>
        <p class="display-4 fw-bold"><%= @suppliers_count %></p>
        <%= link_to "Accéder", suppliers_path, class: "btn btn-warning mt-auto" %>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card text-center h-100">
      <div class="card-body d-flex flex-column justify-content-center">
        <i class="bi bi-archive fs-1 text-secondary mb-2"></i>
        <h5 class="card-title">Barquettes</h5>
        <p class="display-4 fw-bold"><%= @tray_sizes_count %></p>
        <%= link_to "Accéder", tray_sizes_path, class: "btn btn-secondary mt-auto" %>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card text-center h-100">
      <div class="card-body d-flex flex-column justify-content-center">
        <i class="bi bi-tags fs-1 text-info mb-2"></i>
        <h5 class="card-title">Tarifs</h5>
        <p class="display-4 fw-bold"><%= current_user.recipes.where(sellable_as_component: false).count %></p>
        <%= link_to "Accéder", tarifs_recipes_path, class: "btn btn-info mt-auto" %>
      </div>
    </div>
  </div>
</div>
