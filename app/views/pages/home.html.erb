<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-body text-center py-5">
          <h1 class="card-title mb-4">CostChef</h1>
          <p class="lead text-muted mb-4">
            Calcul de coût de revient matières pour traiteurs
          </p>

          <hr class="my-4">

          <p class="text-muted mb-4">
            Bienvenue <strong><%= current_user.email %></strong>
          </p>

          <% if current_user.admin? %>
            <div class="mb-3">
              <%= link_to "Gestion des utilisateurs", admin_users_path, class: "btn btn-outline-primary" %>
              <%= link_to "Invitations", admin_invitations_path, class: "btn btn-outline-primary ms-2" %>
            </div>
          <% end %>

          <div class="d-grid gap-2 col-6 mx-auto">
            <%= button_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
