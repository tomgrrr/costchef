<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header">
          <h4 class="mb-0">Créer une invitation</h4>
        </div>
        <div class="card-body">
          <%= form_with model: [:admin, @invitation], local: true do |f| %>
            <% if @invitation.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% @invitation.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :email, "Adresse email", class: "form-label" %>
              <%= f.email_field :email, class: "form-control", placeholder: "utilisateur@example.com", required: true, autofocus: true %>
              <div class="form-text">
                Un email d'invitation sera envoyé automatiquement à cette adresse.
              </div>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to "Annuler", admin_invitations_path, class: "btn btn-outline-secondary" %>
              <%= f.submit "Envoyer l'invitation", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
