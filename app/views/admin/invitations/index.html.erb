<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Gestion des invitations</h1>
    <div>
      <%= link_to "Nouvelle invitation", new_admin_invitation_path, class: "btn btn-primary" %>
      <%= link_to "Utilisateurs", admin_users_path, class: "btn btn-outline-secondary ms-2" %>
    </div>
  </div>

  <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= flash[:notice] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= flash[:alert] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
    </div>
  <% end %>

  <div class="card shadow-sm">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>Email</th>
            <th>Statut</th>
            <th>Créée par</th>
            <th>Date de création</th>
            <th>Expire le</th>
          </tr>
        </thead>
        <tbody>
          <% if @invitations.empty? %>
            <tr>
              <td colspan="5" class="text-center text-muted py-4">
                Aucune invitation pour le moment
              </td>
            </tr>
          <% else %>
            <% @invitations.each do |invitation| %>
              <tr>
                <td><%= invitation.email %></td>
                <td>
                  <% case invitation.status %>
                  <% when :pending %>
                    <span class="badge bg-warning text-dark">En attente</span>
                  <% when :used %>
                    <span class="badge bg-success">Utilisée</span>
                    <small class="text-muted d-block">
                      <%= invitation.used_at.strftime("%d/%m/%Y à %H:%M") %>
                    </small>
                  <% when :expired %>
                    <span class="badge bg-secondary">Expirée</span>
                  <% end %>
                </td>
                <td><%= invitation.created_by_admin.email %></td>
                <td><%= invitation.created_at.strftime("%d/%m/%Y à %H:%M") %></td>
                <td><%= invitation.expires_at.strftime("%d/%m/%Y à %H:%M") %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <p class="text-muted mt-3">
    <small><%= @invitations.count %> invitation(s) au total</small>
  </p>
</div>
