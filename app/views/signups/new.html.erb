<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="card shadow">
        <div class="card-header text-center">
          <h4 class="mb-0">Créer votre compte CostChef</h4>
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: signup_path(token: @invitation.token), local: true do |f| %>
            <% if @user.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :email, "Adresse email", class: "form-label" %>
              <%= f.email_field :email, class: "form-control", value: @invitation.email, disabled: true %>
              <div class="form-text">
                L'adresse email est définie par l'invitation.
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :first_name, "Prénom", class: "form-label" %>
              <%= f.text_field :first_name, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :last_name, "Nom", class: "form-label" %>
              <%= f.text_field :last_name, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :company_name, "Nom de l'entreprise", class: "form-label" %>
              <%= f.text_field :company_name, class: "form-control" %>
            </div>

            <hr>

            <div class="mb-3">
              <%= f.label :password, "Mot de passe", class: "form-label" %>
              <%= f.password_field :password, class: "form-control", required: true, autocomplete: "new-password" %>
              <div class="form-text">
                Minimum 6 caractères
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Confirmer le mot de passe", class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control", required: true, autocomplete: "new-password" %>
            </div>

            <div class="d-grid">
              <%= f.submit "Créer mon compte", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <hr>

          <p class="text-center text-muted mb-0">
            Vous avez déjà un compte ?
            <%= link_to "Se connecter", new_user_session_path %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
