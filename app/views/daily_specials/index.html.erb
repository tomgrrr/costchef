<!-- Breadcrumb -->
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Accueil", root_path %></li>
    <li class="breadcrumb-item active">Plats du Jour</li>
  </ol>
</nav>

<!-- En-tête -->
<div class="row mb-4">
  <div class="col-md-8">
    <h2><i class="bi bi-calendar-event"></i> Plats du Jour</h2>
    <p class="text-muted">Suivez les coûts de vos plats du jour</p>
  </div>
  <div class="col-md-4 text-end">
    <span class="badge bg-secondary fs-6"><%= @meats.count + @fishes.count + @sides.count %> entrée<%= (@meats.count + @fishes.count + @sides.count) > 1 ? 's' : '' %></span>
  </div>
</div>

<!-- Formulaire d'ajout -->
<div class="card shadow-sm mb-4">
  <div class="card-header bg-primary text-white">
    <i class="bi bi-plus-circle"></i> Ajouter un plat du jour
  </div>
  <div class="card-body">
    <%= render "form", daily_special: @daily_special %>
  </div>
</div>

<%
  categories = [
    { key: :meats, title: "Viandes", icon: "bi-egg-fried", color: "danger", items: @meats },
    { key: :fishes, title: "Poissons", icon: "bi-water", color: "info", items: @fishes },
    { key: :sides, title: "Accompagnements", icon: "bi-flower1", color: "success", items: @sides }
  ]
%>

<% categories.each do |cat| %>
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-<%= cat[:color] %> bg-opacity-10">
      <h5 class="mb-0">
        <i class="bi <%= cat[:icon] %>"></i> <%= cat[:title] %>
        <span class="badge bg-<%= cat[:color] %> ms-2"><%= cat[:items].count %></span>
      </h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th style="width: 35%">Nom</th>
              <th style="width: 20%">Date</th>
              <th style="width: 20%">Coût/kg</th>
              <th style="width: 25%" class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if cat[:items].empty? %>
              <tr>
                <td colspan="4" class="text-center py-3 text-muted">
                  Aucun plat enregistré dans cette catégorie
                </td>
              </tr>
            <% else %>
              <% cat[:items].each do |daily_special| %>
                <%= render "daily_special_row", daily_special: daily_special %>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
